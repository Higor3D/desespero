<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_comum"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/idToolBarMeioAmbiente"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/seta"
        android:background="@color/light_purple"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textoCadastro"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hollywoodone"
            android:padding="9dp"
            android:text="CADASTRE-SE"
            android:textColor="@color/branquinho"
            android:textSize="30dp" />


        <EditText
            android:id="@+id/CadastrarLoginId"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green"
            android:hint="Usuário"
            android:inputType="text"
            android:maxLength="20"
            android:textColorHint="@color/light_purple"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/CadastrarEmailId"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/green"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:textColorHint="@color/light_purple"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/CadastrarSenhaId"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/green"
            android:hint="Senha"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="@color/light_purple"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ConfirmarSenhaId"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/green"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="@color/light_purple"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/hollywoodone"
            android:padding="23dp"
            android:text="Deseja receber notícias no seu email diariamente?"
            android:textColor="@color/white"
            android:textSize="12dp" />


        <Button
            android:id="@+id/idBtnCadastrar"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:background="@drawable/button"
            android:fontFamily="@font/hollywoodone"
            android:text="cadastrar"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>